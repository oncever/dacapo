<project name="fop" default="all" basedir="..">
    <description>Dacapo fop benchmark</description>
    
	<property file="ant/dacapo.properties"/>
	
	<property name="bm-name" value="fop"/>
    <property name="bm-version" value="0.94"/>
    <property name="bm-url" value="${apache.dl.url}/xmlgraphics/fop/source"/>
	<property name="bm-src" value="${bm-name}-${bm-version}-src.tar.gz"/>
	<property name="bm-harness-classpath" value="${build}:${jars}/fop.jar"/>
	
    <import file="../common.xml"/>

	<property name="bm-build-top" value="${bm-build-dir}/${bm-name}-${bm-version}"/>
	
	<target name="bm-build" depends="bm-patch">
    	<ant dir="${bm-build-top}" inheritall="false"/>
	</target>

	<target name="bm-jar">
    	<copy file="${bm-build-top}/build/fop.jar" todir="${jars}"/>
		<copy file="${bm-build-top}/lib/avalon-framework-4.2.0.jar" todir="${jars}"/>
		<copy file="${bm-build-top}/lib/batik-all-1.6.jar" todir="${jars}"/>
		<copy file="${bm-build-top}/lib/commons-io-1.3.1.jar" todir="${jars}"/>
		<copy file="${bm-build-top}/lib/commons-logging-1.0.4.jar" todir="${jars}"/>
		<copy file="${bm-build-top}/lib/serializer-2.7.0.jar" todir="${jars}"/>
		<copy file="${bm-build-top}/lib/xmlgraphics-commons-1.2.jar" todir="${jars}"/>
	</target>
</project>
